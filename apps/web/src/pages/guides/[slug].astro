---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { guides, type Guide } from '../../content/guides';
import { createLocalBusinessSchema } from '../../utils/schema';
import { withTrailingSlash } from '../../utils/urls';

export function getStaticPaths() {
  return guides.map((guide) => ({
    params: { slug: guide.slug },
    props: { guide }
  }));
}

const { guide } = Astro.props as { guide: Guide };
const canonicalPath = `/guides/${guide.slug}/`;
const related = guides.filter((item) => item.slug !== guide.slug).slice(0, 2);
---

<BaseLayout
  title={guide.title}
  description={guide.description}
  canonicalPath={canonicalPath}
  jsonLd={createLocalBusinessSchema(canonicalPath)}
>
  <section class="container py-14">
    <div class="space-y-4">
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500">Guide</p>
      <h1 class="font-display text-4xl text-slate-900">{guide.title}</h1>
      <p class="text-lg text-slate-700">{guide.intro}</p>
    </div>

    <div class="mt-10 grid gap-6">
      {guide.sections.map((section) => (
        <article class="rounded-3xl border border-white/80 bg-white p-6 shadow-soft">
          <h2 class="text-xl font-semibold text-slate-900">{section.heading}</h2>
          <div class="mt-3 space-y-3 text-sm text-slate-700">
            {section.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 rounded-3xl border border-white/80 bg-white p-6 shadow-soft">
      <h2 class="text-lg font-semibold text-slate-900">More locksmith tips</h2>
      <div class="mt-4 grid gap-4 md:grid-cols-2">
        {related.map((item) => (
          <a
            class="rounded-2xl border border-slate-100 bg-white px-4 py-3 text-sm font-semibold text-slate-800"
            href={withTrailingSlash(`/guides/${item.slug}`)}
          >
            {item.title}
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
