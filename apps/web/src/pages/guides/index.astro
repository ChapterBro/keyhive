---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { guides } from '../../content/guides';
import { createLocalBusinessSchema } from '../../utils/schema';
import { withTrailingSlash } from '../../utils/urls';

const canonicalPath = '/guides/';
---

<BaseLayout
  title="Locksmith Guides and Tips"
  description="Helpful locksmith guides and tips from KeyHive for Kansas City, KS homeowners, drivers, and businesses."
  canonicalPath={canonicalPath}
  jsonLd={createLocalBusinessSchema(canonicalPath)}
>
  <section class="container py-14">
    <div class="space-y-3">
      <p class="text-xs font-semibold uppercase tracking-[0.35em] text-goldSoft">Guides</p>
      <h1 class="font-display text-4xl text-slate-50">Locksmith tips and local guidance</h1>
      <p class="text-lg text-slate-300">
        Quick answers for common lock and key questions in Kansas City, KS. Use these guides to prepare before you call.
      </p>
    </div>

    <div class="mt-10 grid gap-6 md:grid-cols-2">
      {guides.map((guide) => (
        <a
          class="group flex h-full flex-col justify-between rounded-3xl border border-white/10 bg-surface/70 p-6 shadow-soft transition hover:-translate-y-0.5 hover:shadow-glow"
          href={withTrailingSlash(`/guides/${guide.slug}`)}
        >
          <div>
            <h2 class="text-xl font-semibold text-slate-50">{guide.title}</h2>
            <p class="mt-2 text-sm text-slate-300">{guide.description}</p>
          </div>
          <span class="mt-6 text-sm font-semibold text-accent">Read guide -></span>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
