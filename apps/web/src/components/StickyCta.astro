---
import { contact } from '../config/contact';
---

<div class="fixed inset-x-0 bottom-0 z-40 bg-ink/95 px-4 pt-3 pb-[calc(env(safe-area-inset-bottom)+0.75rem)] text-white shadow-2xl md:hidden">
  <a
    href={contact.phoneHref}
    class="flex w-full items-center justify-center gap-2 rounded-full bg-gradient-to-r from-accent to-goldSoft px-4 py-3 text-base font-semibold text-ink shadow-glow"
  >
    Call Now {contact.phoneDisplay}
  </a>
</div>
