---
import { brand } from '../config/brand';
import { contact } from '../config/contact';
import { withTrailingSlash } from '../utils/urls';
---

<footer class="border-t border-white/60 bg-white/80">
  <div class="container grid gap-10 py-10 md:grid-cols-[1.2fr_0.8fr_1fr]">
    <div class="space-y-4">
      <div class="flex items-center gap-3">
        <img
          src={brand.logoPath}
          alt={`${brand.name} logo`}
          class="h-10 w-10 rounded-full object-contain"
          width="40"
          height="40"
          loading="lazy"
          decoding="async"
        />
        <div>
          <p class="font-display text-lg text-slate-900">{brand.name}</p>
          <p class="text-sm text-slate-600">{brand.tagline}</p>
        </div>
      </div>
      <div class="text-sm text-slate-700">
        <p>Phone: <a class="font-semibold text-slate-900" href={contact.phoneHref}>{contact.phoneDisplay}</a></p>
        <p>Email: <a class="font-semibold text-slate-900" href={`mailto:${contact.email}`}>{contact.email}</a></p>
        <p>Hours: {contact.hours}</p>
      </div>
    </div>
    <div class="space-y-3 text-sm">
      <p class="font-semibold uppercase tracking-wide text-slate-500">Menu</p>
      <ul class="space-y-2">
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/')}>Home</a></li>
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/services')}>Services</a></li>
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/areas')}>Locations</a></li>
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/about')}>About</a></li>
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/contact')}>Contact</a></li>
        <li><a class="text-slate-700 hover:text-slate-900" href={withTrailingSlash('/privacy-policy')}>Privacy Policy</a></li>
      </ul>
    </div>
    <div class="space-y-3 text-sm">
      <p class="font-semibold uppercase tracking-wide text-slate-500">Service Area</p>
      <p class="text-slate-700">{contact.primaryCity} and nearby Kansas communities.</p>
      <a
        class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white px-4 py-2 font-semibold text-slate-800 shadow-sm"
        href={withTrailingSlash('/areas')}
      >
        View all locations
      </a>
    </div>
  </div>
  <div class="border-t border-white/80 bg-white/70">
    <div class="container flex flex-col justify-between gap-2 py-4 text-xs text-slate-600 md:flex-row">
      <p>(c) {new Date().getFullYear()} {brand.name}. All rights reserved.</p>
      <p>Mobile locksmith service in Kansas City, KS and surrounding areas.</p>
    </div>
  </div>
</footer>
